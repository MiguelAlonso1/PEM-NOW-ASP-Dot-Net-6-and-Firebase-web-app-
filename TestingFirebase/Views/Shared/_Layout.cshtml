<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PEM-NOW</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://cdn.datatables.net/1.11.3/css/jquery.dataTables.min.css" rel="stylesheet" />
    @*Bootstrap Icons*@
    <link rel="stylesheet" href="~/bootstrap-icons/font/bootstrap-icons.css">


    @*favicon stuff*@

    <link rel="apple-touch-icon" sizes="180x180" href="~/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="~/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="~/favicon-16x16.png">
    <link rel="manifest" href="~/site.webmanifest">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a asp-controller="Home" asp-action="Index" class="navbar-brand">
                    <!-- Logo Image -->
                    <img src="\images\pem-logo.png" width="100" alt="" class="d-inline-block align-middle mr-2">
                    <!-- Logo Text -->
                    @*<span class="text-uppercase font-weight-bold">PEM-NOW</span>*@
                </a>
                <a class="navbar-brand text-warning" asp-area="" asp-controller="Home" asp-action="Index">(.Net Core 6 Version)</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        @if (@UserSession.token != null)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                        }
                        @if (@UserSession.token == null)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Login">Login</a>
                            </li>
                        }
                        @if (@UserSession.token != null)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="LogOut">
                                    Logout
                                    <i class="bi bi-box-arrow-right" style="font-size: 1rem; color: cornflowerblue;"></i>
                                </a>
                            </li>


                            <li class="nav-item nav ml-auto">
                                <i class="bi bi-person-circle" style="font-size: 1rem; color: cornflowerblue;"></i>
                                @UserSession.userName
                            </li>

                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - PEM-NOW - @*<a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>*@
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @*Below for datatables*@
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.11.3/js/dataTables.bootstrap4.min.js"></script>
    <script type="text/javascript" src="~/js/notify.min.js"></script>


    @* tiny for formatted text areas! ;)*@

    <script src="https://cdn.tiny.cloud/1/8k17b57xiiy9jz9yw1b4sjbdqpco1i8o3wb08r3htl2rftlg/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>


    @* free version below without the plugins

        <script>tinymce.init({ selector:'textarea'});</script>*@

    <script>
        tinymce.init({
          selector: 'textarea',
          plugins: 'a11ychecker advcode casechange export formatpainter linkchecker autolink lists checklist media mediaembed pageembed permanentpen powerpaste table advtable tinycomments tinymcespellchecker',
          toolbar: 'a11ycheck addcomment showcomments casechange checklist code export formatpainter pageembed permanentpen table',
          toolbar_mode: 'floating',
          tinycomments_mode: 'embedded',
          tinycomments_author: 'Author name',
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>