@model TestingFirebase.Models.LoginModel

@{
    ViewData["Title"] = "Login";
}

<h1 class="col-md-4 mx-auto">Login</h1>

<hr />
<div class="row">
    <div class="col-md-4 mx-auto">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
         @*       <label asp-for="Email" class="control-label"></label>*@
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="basic-addon1">
                            <i class="bi bi-person-check-fill" style="color: cornflowerblue;"> </i>
                        </span>
                    </div>
                    <input asp-for="Email" class="form-control" placeholder="Username" />
                </div>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
        @*      <label asp-for="Password" class="control-label"></label>*@

                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="basic-addon1">
                            <i class="bi bi-key-fill" style="color: cornflowerblue;"> </i>
                        </span>
                    </div>
                    <input asp-for="Password" class="form-control" type="password" placeholder="Password" />
                </div>

                <span asp-validation-for="Password" class="text-danger"></span>

            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary form-control" />
            </div>
        </form>
    </div>
</div>

<div>
    <span class="text-info">Don't have an account yet?</span>
    <a asp-action="Register">Signup</a>
</div>


@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}